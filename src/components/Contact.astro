<section class="sm:p-20 p-5 bg-indigo-50 dark:bg-zinc-800  scroll-mt-20" id="contact">
    <div class="sm:container mx-auto">
        <h2 class="text-center text-4xl font-bold pb-10">Contacto</h2>
        <div class="w-full sm:flex">
            <div class="w-full bg-colors-blue p-10 rounded-md">
                <form action="https://formsubmit.co/vega99juan@gmail.com" method="POST" onsubmit="submitForm(event)">
                    <div class="mt-5 grid grid-cols-1 gap-y-8">
                        <div class="sm:col-span-4">
                            <label for="username" class="block text-sm font-medium leading-6 ">Email</label>
                            <input required type="text" name="username" id="username" autocomplete="email" class="block w-full outline-1 border border-1 flex-1 bg-transparent py-1.5 pl-3  placeholder:text-gray-400 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="mt-5 grid grid-cols-1 gap-y-8">
                        <div class="sm:col-span-4">
                            <label for="subject" class="block text-sm font-medium leading-6 ">Subject</label>
                            <input required type="text" name="subject" id="subject" autocomplete="subject" class="block w-full outline-1 border border-1 flex-1 bg-transparent py-1.5 pl-3  placeholder:text-gray-400 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="mt-5 grid grid-cols-1 gap-y-8">
                        <div class="sm:col-span-4">
                            <label for="message" class="block text-sm font-medium leading-6 ">Message</label>
                            <textarea required name="message" id="message" autocomplete="message" class="block w-full outline-1 border border-1 flex-1 bg-transparent py-1.5 pl-3  placeholder:text-gray-400 sm:text-sm sm:leading-6"></textarea>
                        </div>
                    </div>

                    <div class="mt-5 grid grid-cols-1 gap-y-8">
                        <button type="submit" class="bg-red-200 dark:bg-gray-600 mx-auto w-32 text-center rounded-md p-2 border border-1 border-gray-100 hover:bg-white">Submit</button>
                    </div>
                    <input type="hidden" name="_next" value="https://juanvegaedicion.vercel.app/#contact">
                    <input type="hidden" name="_captcha" value="false">

                </form>

                <div id="successMessage" style="display: none; text-align: center; padding: 10px; background-color: #4CAF50; color: white; border-radius: 5px;">
                    Form submitted successfully!
                </div>
            </div>
        </div>
    </div>
</section>
